<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        tools:context="stepCounter.StepCounterFragment">

        <RelativeLayout
            android:id="@+id/first_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:elevation="8dp"
            android:background="@drawable/bot_radius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/rundogrun" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/first_view"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:elevation="8dp"
            android:padding="3dp"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/stepsValue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/_0"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/stepText_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:text="PASSI FATTI"
                    android:textSize="35sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thirdView"
        android:layout_below="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:elevation="8dp"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/calValue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/_0"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/calText_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:text="CALORIE BRUCIATE"
                    android:textSize="30sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:rowCount="1">

        <Button
            android:id="@+id/btn_start"
            android:text="@string/avvia"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btn_stop"
            android:text="@string/termina"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

    </GridLayout>

</RelativeLayout>




